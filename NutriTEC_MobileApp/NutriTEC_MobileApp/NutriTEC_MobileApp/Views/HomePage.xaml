<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriTEC_MobileApp.Views.HomePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="GhostWhite">
            <StackLayout HorizontalOptions="CenterAndExpand">
                <Label Text="HOME PAGE" TextColor="Black" HorizontalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold"/>
            </StackLayout>

            <Button Text="ADD CONSUMPTION" Clicked="Button_AddConsumption" BackgroundColor="#645fce" TextColor="White" Margin="0, 20, 0, 0" FontAttributes="Bold" CornerRadius="20"/>

            <Button Text="ADD MEASUREMENT" Clicked="Button_AddMeasurement" BackgroundColor="#645fce" TextColor="White" Margin="0, 20, 0, 0" FontAttributes="Bold" CornerRadius="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>