<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutriTEC_MobileApp.Views.AddMeasurementPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="GhostWhite">
            <Label Text="Add Measurement" TextColor="Black" HorizontalOptions="CenterAndExpand" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="weightEntry" Keyboard ="Default" Placeholder="WEIGHT"/>
            <Entry x:Name="nameEntry" Keyboard="Default" Placeholder="WAIST" />
            <Entry x:Name="neckEntry" Keyboard ="Default" Placeholder="NECK"/>
            <Entry x:Name="hipEntry" Keyboard ="Default" Placeholder="HIP"/>
            <Entry x:Name="musclePercentageEntry" Keyboard ="Default" Placeholder="MUSCLE %"/>
            <Entry x:Name="fatPercentageEntry" Keyboard ="Default" Placeholder="FAT %"/>
            <Button Text="ADD" Clicked="AddMeasurementButton" BackgroundColor="#645fce" TextColor="White" Margin="25" FontAttributes="Bold" CornerRadius="20"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>